{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src"],
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "*": ["src", "*"]
    }
  },
  "include": ["src/**/*"]
}
